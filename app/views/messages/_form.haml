= form_for @message, remote: :true do |f|
  - if @message.errors.any?
    #error_explanation
      %h2= "#{pluralize(@message.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @message.errors.full_messages.each do |msg|
          %li= msg

  = f.hidden_field :receiver, value: @corresponder.id
  .field
    = f.label :content, "New Message"
    = f.text_area :content, rows:"3", style:'width:100%'
  .actions
    = f.submit 'Send', class: "pull-right btn btn-success"
